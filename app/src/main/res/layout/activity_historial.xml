<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/images_card_view"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="0dp"
    android:background="@color/cardview_dark_background"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/imageHistorial"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="top"
            android:scaleType="centerCrop" />
        <TextView
            android:paddingTop="10dp"
            android:id="@+id/txtdescHist"
            android:paddingLeft="@dimen/fab_size_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageHistorial"
            android:text="Titulo"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/txttitHist"
            android:paddingLeft="@dimen/fab_size_normal"
            android:layout_below="@id/txtdescHist"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Subtitulo"
            android:layout_toRightOf="@id/imageHistorial"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
           />
    </RelativeLayout>





</android.support.v7.widget.CardView>