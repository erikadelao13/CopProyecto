<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.delao00064815.copproyecto.ofertaEmpleo.OfertaEmpleo">



    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mRecycler"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <com.github.clans.fab.FloatingActionMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fabprincipal"
        fab:menu_colorNormal="@color/colorPrimary"
        fab:menu_colorPressed="@color/colorPrimary"
        fab:menu_colorRipple="@color/colorPrimary"
        fab_label="Menu"
        fab:menu_icon="@mipmap/ic_buscar"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        >
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/carrera_float_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:fab_label="Carrera"
            app:fab_colorNormal="@color/colorPrimary"
            app:fab_colorPressed="@color/colorPrimary"
            app:fab_colorRipple="@color/colorPrimary"
            android:src="@mipmap/ic_carrera"
            android:onClick="selectCarrera"
            />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/tipoferta_float_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:fab_label="Tipo de Oferta"
            app:fab_colorNormal="@color/colorPrimary"
            app:fab_colorPressed="@color/colorPrimary"
            app:fab_colorRipple="@color/colorPrimary"
            android:src="@mipmap/ic_tipoferta"
            android:onClick="selectTipo"
            />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/sinfiltro_float_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:fab_label="Sin filtro"
            app:fab_colorNormal="@color/colorPrimary"
            app:fab_colorPressed="@color/colorPrimary"
            app:fab_colorRipple="@color/colorPrimary"
            android:src="@mipmap/ic_inicio"
            android:onClick="selectSinFiltro"
            />
    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>


