<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nomOferta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textAlignment="center"
        android:text="Nombre de la oferta" />
    <ImageView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de Oferta: "
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/nombreTipoEmpleo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre tipo oferta"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empresa:  "
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/remuneracion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre empresa"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remuneracion: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/valremuneracion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre tipo oferta"/>
    </LinearLayout>



</LinearLayout>